{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "esnext"],
        "baseUrl": ".",
        "removeComments": true,
        "rootDir": ".",
        "paths": {
            "@mp/zed-ui/*": [
                "./vendor/spryker/zed-ui/src/Spryker/Zed/ZedUi/Presentation/Components/*"
            ],
            "*": ["*"],
            "ShopUi/*": [
                "./vendor/spryker-shop/shop-ui/src/SprykerShop/Yves/ShopUi/Theme/default/*"
            ]
        }
    },
    "include": [
        "./vendor/spryker-shop/**/*",
        "./vendor/spryker-eco/**/*",
        "./src/Pyz/Yves/**/*",
        "./src/Pyz/Zed/**/*"
    ],
    "exclude": ["**/node_modules/**", "**/*.spec.ts", "public", "dist", "**/dist/**"]
}
