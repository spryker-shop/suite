{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "esnext"],
        "baseUrl": ".",
        "rootDir": "."
    }
}
