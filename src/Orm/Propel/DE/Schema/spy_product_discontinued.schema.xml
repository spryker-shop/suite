            <unique-column name="fk_locale"/>
        </unique>
        <id-method-parameter value="id_product_discontinued_note_pk_seq"/>
        <behavior name="timestampable"/>
        <behavior name="event">
            <parameter name="spy_product_discontinued_all" column="*"/>
        </behavior>
    </table>
</database>
